            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="10dp"></LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="15dp"
                android:text="Support: rev.ateam@gmail.com"/>
